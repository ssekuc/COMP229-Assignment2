<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= business._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Full Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Full Name"
                    name="name" 
                    value="<%= business.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Phone Number</label>
                    <input type="number" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Phone Number"
                    name="year" 
                    value="<%= business.number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">E-mail Address</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter E-mail Address"
                    name="director" 
                    value="<%= business.email %>"
                    required>
                </div>


                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/business-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>